<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/ap_black"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Switch
        android:text="Flash"
        android:textColor="@color/ap_white"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:switchPadding="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="0 bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginBottom="-20dp"
        android:textColor="@color/ap_white"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:id="@+id/histvalue"
        android:layout_above="@+id/show_camera_activity_java_surface_view" />



    <com.androidplot.xy.XYPlot
        style="@style/APDefacto.Dark"
        android:id="@+id/plot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        ap:renderMode="use_background_thread"
        ap:title="Heart rate monitor"
        android:layout_below="@+id/show_camera_activity_java_surface_view"
        ap:rangeTitle="Magnitude" />

    <com.example.dilse.Tutorial3View
        android:layout_height="250dp"
        android:visibility="gone"
        android:id="@+id/show_camera_activity_java_surface_view"
        opencv:show_fps="true"
        opencv:camera_id="back"
        android:layout_marginTop="0dp"
        android:layout_width="200dp"
        android:layout_below="@+id/switch1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>